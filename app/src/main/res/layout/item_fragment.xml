<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.item.ItemFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/posterView"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/poster_large_example" />

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:background="@color/background_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/button_back" />

            <View
                android:id="@+id/imageFade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/posterFadeEffectHeight"
                android:layout_gravity="bottom"
                android:background="@drawable/fade_image"
                app:layout_constraintBottom_toBottomOf="@+id/posterView"
                app:layout_constraintEnd_toEndOf="@+id/posterView"
                app:layout_constraintStart_toStartOf="@+id/posterView" />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="24dp"
                android:paddingEnd="24dp"
                android:text="ATTACK ON TITANS"
                app:layout_constraintStart_toStartOf="@+id/imageFade"
                app:layout_constraintTop_toTopOf="@+id/imageFade" />

            <TextView
                android:id="@+id/itemYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="24dp"
                android:text="2020"
                app:layout_constraintStart_toStartOf="@+id/itemTitle"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle" />

            <TextView
                android:id="@+id/itemDividerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                app:layout_constraintBottom_toBottomOf="@+id/itemYear"
                app:layout_constraintStart_toEndOf="@+id/itemYear"
                app:layout_constraintTop_toTopOf="@+id/itemYear" />

            <TextView
                android:id="@+id/itemGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="action, adventure, fantasy"
                app:layout_constraintBottom_toBottomOf="@+id/itemYear"
                app:layout_constraintStart_toEndOf="@+id/itemDividerOne"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle" />

            <TextView
                android:id="@+id/itemDividerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                app:layout_constraintBottom_toBottomOf="@+id/itemYear"
                app:layout_constraintStart_toEndOf="@+id/itemGenres"
                app:layout_constraintTop_toTopOf="@+id/itemYear" />

            <TextView
                android:id="@+id/itemMean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="24dp"
                android:text="9.4"
                app:layout_constraintBottom_toBottomOf="@+id/itemYear"
                app:layout_constraintStart_toEndOf="@+id/itemDividerTwo"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle" />

            <EditText
                android:id="@+id/itemNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add your notes here"
                android:paddingHorizontal="24dp"
                android:textColor="@color/primary_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSynopsis" />

            <TextView
                android:id="@+id/itemSynopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:text="@string/anime_synopsis_example"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemYear" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>
